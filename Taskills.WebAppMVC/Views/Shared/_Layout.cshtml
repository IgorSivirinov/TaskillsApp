<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Taskills.WebAppMVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Taskills.WebAppMVC.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bitter:400,700">
	<link rel="stylesheet" href="~/fonts/fontawesome-all.min.css" />
	<link rel="stylesheet" href="~/fonts/font-awesome.min.css" />
	<link rel="stylesheet" href="~/fonts/fontawesome5-overrides.min.css" />
	<link rel="stylesheet" href="~/css/-Filterable-Cards-.css">
	<link rel="stylesheet" href="~/css/Article-Cards.css">
	<link rel="stylesheet" href="~/css/Header-Dark.css">
	<link rel="stylesheet" href="~/css/login-full-page-bs4.css">
	<link rel="stylesheet" href="~/css/News-Cards.css">
	<link rel="stylesheet" href="~/css/Profile-Edit-Form-1.css" />
	<link rel="stylesheet" href="~/css/Profile-Edit-Form.css" />

	<link rel="stylesheet" href="~/css/styles.css" />



	<link rel="stylesheet" href="~/css/Header-Dark.css" />
</head>
<body>
	<header class="header-dark">
		<nav class="navbar navbar-dark navbar-expand-lg navigation-clean-search">
			<div class="container">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">IT Dungeon</a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
				<div class="collapse navbar-collapse" id="navcol-1">

					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a class="dropdown-toggle nav-link" aria-expanded="false" data-bs-toggle="dropdown" href="#">Меню </a>
							<div class="dropdown-menu">
								<a class="dropdown-item" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="EditProfile">Изменить имя</a>
								<a class="dropdown-item" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="ResetPassword">Сбросить пароль</a>
								<a class="dropdown-item" asp-controller="List" asp-action="AllItemsIndex">Каталог</a>
								<a class="dropdown-item" asp-controller="CreatePlace" asp-action="CreatePlaceForm">Добавить место</a>
							</div>
						</li>
					</ul>
					<form class="me-auto" target="_self">
						<div class="d-flex align-items-center">
							<label class="form-label d-flex mb-0" for="search-field">
								<i class="fa fa-search"></i>
							</label>
							<input class="form-control search-field" type="search" id="search-field" name="search" placeholder="Поиск">
						</div>
					</form>
					<span class="navbar-text">
						@if (User.Identity?.IsAuthenticated == true)
						{
							<a class="btn btn-light action-button" role="button" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Выйти</a>
						}
						else
						{
							<a class="login" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Войти</a>
						}
					</span>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<script src="~/js/login-full-page-bs4.js"></script>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/Profile-Edit-Form.js"></script>
	<script src="~/js/profileSettings.js"></script>
	<script src="~/js/login-full-page-bs4-1.js"></script>
	<script src="~/js/-Filterable-Cards-.js"></script>
	<script src="~/lib/webcamjs/webcam.min.js"></script>
	<script src="~/js/cam.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
